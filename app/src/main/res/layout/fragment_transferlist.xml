<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTfListFilterStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Status"
        app:layout_constraintStart_toStartOf="@+id/spTfListStatus"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTfListFilterVonOrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Filter"
        app:layout_constraintStart_toStartOf="@+id/spTfListDirection"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spTfListStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/filt_transfer_status"
        app:layout_constraintEnd_toStartOf="@+id/spTfListDirection"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTfListFilterStatus" />

    <Spinner
        android:id="@+id/spTfListDirection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/filt_transfer_direction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/spTfListStatus"
        app:layout_constraintTop_toBottomOf="@+id/tvTfListFilterVonOrt" />

    <TextView
        android:id="@+id/tvTfListTypHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Typ"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spTfListStatus" />

    <TextView
        android:id="@+id/tvTfListStatusHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="St."
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvTfListTypHeadline"
        app:layout_constraintTop_toTopOf="@+id/tvTfListTypHeadline" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Zielort"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvTfListStatusHeadline"
        app:layout_constraintTop_toTopOf="@+id/tvTfListTypHeadline" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTransferlists"
        android:layout_width="409dp"
        android:layout_height="686dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTfListTypHeadline"
        app:layout_constraintVertical_bias="0.195" />
</androidx.constraintlayout.widget.ConstraintLayout>